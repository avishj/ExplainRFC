---
import Layout from "@/layouts/Layout.astro";
import { ExhibitPlayer } from "@/components/exhibit";
import { rfcData, storyboard } from "@/data/rfcs/793-tcp/data";

export function getStaticPaths() {
  return [
    { params: { id: "793" } },
  ];
}

const { id: _id } = Astro.params;

// In a full implementation, this would look up the RFC by ID
const rfc = rfcData;
const steps = storyboard;

const title = `RFC ${rfc.id}: ${rfc.shortTitle} â€” Explain RFC`;
const description = rfc.description;
const base = import.meta.env.BASE_URL;
---

<Layout title={title} description={description}>
  <ExhibitPlayer 
    client:load 
    rfc={rfc} 
    storyboard={steps}
    baseUrl={base}
  />
</Layout>

<style>
  :global(body) {
    overflow: hidden;
  }
</style>
